<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/date_listItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_weight="100"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:text="@string/listview_header_date"
        android:gravity="start|center_vertical"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lift_listItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_weight="100"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:text="@string/listview_header_lift"
        android:gravity="start|center_vertical"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/location_listItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_weight="130"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:text="@string/listview_header_location"
        android:gravity="start|center_vertical"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/height_listItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_weight="130"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:text="@string/listview_header_height"
        android:gravity="start|center_vertical"
        android:textSize="13sp"
        android:textStyle="bold" />

</LinearLayout>