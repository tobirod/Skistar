<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/date_listItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="170"
        android:text="@string/date_header"
        android:gravity="start|center_vertical"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lift_listItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="150"
        android:text="@string/lift_header"
        android:gravity="start|center_vertical"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/location_listItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="150"
        android:text="@string/location_header"
        android:gravity="start|center_vertical"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/height_listItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="150"
        android:text="@string/height_header"
        android:gravity="start|center_vertical"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>